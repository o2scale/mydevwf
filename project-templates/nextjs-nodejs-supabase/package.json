{
  "name": "nextjs-nodejs-supabase",
  "version": "1.0.0",
  "description": "Next.js + Node.js + Supabase fullstack template with BMad workflow integration",
  "private": true,
  "scripts": {
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "mcp:install": "npm install -g openapi-mcp-generator",
    "mcp:generate": "openapi-mcp-generator --input http://localhost:3000/api-docs-json --output ./.mcp-server --server-name api-server --transport stdio --force",
    "mcp:setup": "cd .mcp-server && npm install",
    "mcp:start": "cd .mcp-server && npm start",
    "mcp:verify": "echo 'Checking MCP configuration...' && node -e \"console.log(require('./.mcp.json'))\"",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && npm test",
    "test:e2e": "cd tests/e2e && npx playwright test"
  },
  "keywords": [
    "nextjs",
    "nodejs",
    "supabase",
    "mcp",
    "bmad",
    "fullstack"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "openapi-mcp-generator": "^1.0.0"
  }
}
